<%# tabular environment generated by pandoc %>
<% file = Tempfile.new() %>
<% file.write strip_indent(dump).strip %>
<% file.close %>
<% html = `pandoc --mathjax --from=markdown+simple_tables --to=html #{file.path}` %>
<% html.gsub!('<table>', '<table class="table table-hover">') %>
<div class="table-responsive">
<%= html %>
<% file.unlink %>
</div>