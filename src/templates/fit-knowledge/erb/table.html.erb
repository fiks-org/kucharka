<% if is_child_of?('paragraph') %></p><% end %>
<% rows = fetch_all('row') %>
<table class="table table-hover">
  <% if meta['noheader'].nil? || !meta['noheader'] %>
  <thead>
    <%=r rows.first %>
  </thead>
  <% end %>
  <tbody>
    <% if meta['noheader'] %>
    <%=r rows.first %>
    <% end %>
    <% rows[1..].each do |row| %>
      <%=r row %>
    <% end %>
  </tbody>
</table>
<% if is_child_of?('paragraph') %><p><% end %>
