<%# Example wobject %>
<%# title: optional title %>
<%# english: optional english title %>
<%# label: optinal label %>
<%# index: optinal index entry %>
<%# star: optional boolean %>
<% if meta?('index') %>
<% document.index.register(meta['index'], self) %>
<% end %>
<div class="woowoo-exercise card mb-3" id="<%= label %>">
  <h5 class="card-header bg-warning text-white">
    <div class="d-flex justify-content-between">
    <span class="anchored" data-anchor-id="<%= label %>">Cvičení<%= meta['star'] ? '*' : '' %> <%= numeric_label %>
    <% if meta?('title') && meta?('english') %>
    (<%= r(parse_text_stub(meta['title']), glue: true) %> / <%= r(parse_text_stub(meta['english']), glue: true) %>)
    <% elsif meta?('title') && !meta?('english') %>
    (<%= r(parse_text_stub(meta['title']), glue: true) %>)
    <% end %></span>
    <span class="fa fa-mug-hot"></span>
    </div>
  </h5>
  <div class="card-body">
    <%= r content %>
  </div>
</div>
