<%# a quote %>
<%# author: optional author %>
<%# link: optional link, ignored when no author is given %>

\begin{quote}
\itshape
<%= r(content).strip %>
<% if meta['link'] %>


\hfill\href{<%= meta['link'] %>}{<%= meta['author'] %>}<% elsif meta['author'] %>


\hfill <%= meta['author'] %>
<% end %>


\end{quote}

