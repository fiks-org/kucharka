<%# Description of an Algorithm %>
<%# title: optional %>
<%# english: optional english title %>
<%# label: optional wobject label %>
<%# index: optional index entry %>

\begin{algorithm}
<%= r(content).rstrip %>
\caption{<% if meta?('title') %><%= r(parse_text_stub(meta['title']), glue: true) %><% if meta? 'english' %> / \textit{<%= r(parse_text_stub(meta['english']), glue: true) %><% end %><% end %>}
<% if meta?('label') && meta?('index') %>
<% document.index.register(meta['index'], self) %>
\label{<%= meta['label'] %>}<%= index_macro meta['index'] %>
<% elsif meta?('label') %>
\label{<%= meta['label'] %>}
<% elsif meta?('index') %>
<% document.index.register(meta['index'], self) %>
\index{<%= meta['index'] %>}
<% end %>
\end{algorithm}

