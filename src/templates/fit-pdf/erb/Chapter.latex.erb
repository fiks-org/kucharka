<%# Chapter %>
<%# short_title: optional short title %>
<%# label: optional label %>
<%# index: index entry %>

\chapter<% if meta.key? 'short_title' %>
[<%= r(parse_text_stub(meta['short_title']), glue: true) %>]<% end %>
{<%= r(parse_text_stub(title), glue: true) %>}
<% if meta.key? 'label' %>
\label{<%= meta['label'] %>}
<% end %>
<% if meta['index'] %>
<%= index_macro meta['index'] %>
<% spine.document.index.register(meta['index'], self) %>
<% end %>
<% content.each do |node| %>
<%=r node %>
<% end %>
<% children.each do |child| %>
<%=r child %>
<% end %>

